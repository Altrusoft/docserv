# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET		/						se.altrusoft.docserv.controllers.Admin.index
GET		/version				se.altrusoft.docserv.controllers.Admin.version
GET		/templates				se.altrusoft.docserv.controllers.Admin.templates

# Document
#POST	/document/:templateId   se.altrusoft.docserv.controllers.Application.getDocument(templateId:String,encoding:String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file           controllers.Assets.at(path="/public", file)
